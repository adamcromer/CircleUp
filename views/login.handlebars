<section class="signin">
  <div class="container">
    <div class="logo brand-text">CircleUp</div>
    <div class="grid-box">
      <div class="round-left sign-flex">
        <div class="padded-box">

          <h3 class="brand-text">Sign in to Meetups</h3>

          <form class="login">
            <div class="input-field">
              <input id="email-input" type="email" class="validate">
              <label for="email">Email</label>
            </div>
            <div class="input-field">
              <input id="password-input" type="password" class="validate">
              <label for="password">Password</label>
            </div>
            <div>
              <button type="submit" id="btn-signup" class="waves-effect waves-light btn-large btn-flat btn-filled">Sign In</button>
            </div>
          </form>
          <!-- <p>Forgot your password?</p> -->
        </div>
      </div>

      <div class="white-text round-right sign-flex sign-sidebar">
        <div class="padded-box">
          <h3>Hello Friend</h3>
          <p>Enter your personal details to start connecting</p>
          <a class="waves-effect waves-light btn-large btn-flat btn-sign btn-bordered" href="/">Sign Up</a>
        </div>
      </div>

</section>

<script src="/js/login.js"></script>
<script src="/js/modal.js"></script>